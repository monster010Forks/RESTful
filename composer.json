{
  "name": "jason-napolitano/restful",
  "type": "library",
  "description": "A REST based package for CodeIgniter 4!",
  "homepage": "https://packagist.org/jason-napolitano/RESTful",
  "license": "MIT",
  "require": {
    "php": ">=7.2",
    "nesbot/carbon": "2.28.*"
  },
  "suggest": {
    "monolog/monolog": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "RESTful\\": "./src"
    }
  },
  "config": {
    "optimize-autoloader": true
  },
  "scripts": {
    "post-install-cmd": [
      "php -r \"copy('vendor/jason-napolitano/RESTful/bin/Config/RESTful.php', 'app/Config/RESTful.php');\"",
      "php -r \"copy('vendor/jason-napolitano/RESTful/bin/Config/Filters.php', 'app/Config/Filters.php');\"",
      "php -r \"copy('vendor/jason-napolitano/RESTful/bin/Config/JWT.php',     'app/Config/JWT.php');\""
    ]
  }
}
